{
	"name": "sfv-cli",
	"version": "0.11.2",
	"description": "CLI tool to verify and create SFV files",
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"dev": "npm run build -- --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:e18e": "e18e-cli analyze",
		"prepack": "npm run lint && npm run build",
		"prepare": "lefthook install",
		"publish:jsr": "deno publish",
		"publish:npm": "np --any-branch",
		"test": "vitest"
	},
	"files": [
		"bin/",
		"LICENSE",
		"README.md"
	],
	"bin": {
		"sfv": "bin/cli.mjs",
		"node-sfv": "bin/cli.mjs"
	},
	"type": "module",
	"engines": {
		"node": ">=18.0.0"
	},
	"homepage": "https://www.npmjs.com/package/sfv-cli",
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/node-sfv-cli.git"
	},
	"keywords": [
		"simple file verification",
		"sfv",
		"sfvx",
		"crc",
		"crc32",
		"md5",
		"sha1",
		"sha256",
		"sha512"
	],
	"dependencies": {
		"commander": "^14.0.2",
		"glob": "^13.0.0",
		"kleur": "^4.1.5",
		"listr2": "^9.0.5",
		"log-symbols": "^7.0.1",
		"piscina": "^5.1.4",
		"simple-file-verification": "^5.0.1",
		"yocto-spinner": "^1.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@e18e/cli": "^0.3.1",
		"@idleberg/configs": "^0.3.3",
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "^4.0.15",
		"concurrently": "^9.2.1",
		"np": "^10.2.0",
		"tsdown": "^0.17.2",
		"tslib": "^2.8.1",
		"tsm": "^2.3.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	},
	"packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
