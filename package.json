{
  "name": "sfv-cli",
  "version": "0.11.0",
  "description": "CLI tool to verify and create SFV files",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "dev": "npm run build -- --watch",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepack": "npm run build",
    "start": "npm run dev",
    "test": "uvu tests"
  },
  "files": [
    "bin/",
    "types/",
    "index.mjs",
    "LICENSE",
    "README.md"
  ],
  "bin": {
    "sfv": "index.mjs",
    "node-sfv": "index.mjs"
  },
  "type": "module",
  "typings": "./bin/cli.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "homepage": "https://www.npmjs.com/package/sfv-cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-sfv-cli.git"
  },
  "keywords": [
    "simple file verification",
    "sfv",
    "sfvx",
    "crc",
    "crc32",
    "md5",
    "sha1",
    "sha256",
    "sha512"
  ],
  "dependencies": {
    "commander": "^6.2.1",
    "glob": "^10.3.10",
    "ora": "^8.0.1",
    "picocolors": "^1.0.0",
    "sfv-cli": "link:",
    "simple-file-verification": "^3.0.1",
    "terminal-link": "^3.0.0",
    "update-notifier": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.3",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-plugin-json": "^3.1.0",
    "execa": "^8.0.1",
    "hasha": "^6.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.1.1",
    "remark-cli": "^12.0.0",
    "remark-preset-lint-recommended": "^6.1.3",
    "remark-preset-prettier": "^2.0.1",
    "rimraf": "^5.0.5",
    "tslib": "^2.6.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "uvu": "^0.5.6",
    "which": "^4.0.0"
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
