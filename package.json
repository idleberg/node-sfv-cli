{
	"name": "sfv-cli",
	"version": "0.11.2",
	"description": "CLI tool to verify and create SFV files",
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"dev": "npm run build -- --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:e18e": "e18e-cli analyze",
		"prepack": "npm run lint && npm run build",
		"prepare": "lefthook install",
		"publish:jsr": "deno publish",
		"publish:npm": "np --any-branch",
		"test": "vitest run"
	},
	"files": [
		"bin/",
		"LICENSE",
		"README.md"
	],
	"bin": {
		"sfv": "bin/cli.mjs",
		"node-sfv": "bin/cli.mjs"
	},
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"homepage": "https://www.npmjs.com/package/sfv-cli",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/node-sfv-cli.git"
	},
	"keywords": [
		"simple file verification",
		"sfv",
		"crc",
		"crc32"
	],
	"dependencies": {
		"commander": "^14.0.2",
		"kleur": "^4.1.5",
		"listr2": "^9.0.5",
		"log-symbols": "^7.0.1",
		"piscina": "^5.1.4",
		"simple-file-verification": "^5.0.1",
		"yocto-spinner": "^1.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.3.0",
		"@commitlint/config-conventional": "^20.3.0",
		"@e18e/cli": "^0.3.1",
		"@idleberg/configs": "^0.4.1",
		"@types/node": "^24.10.1",
		"@types/which": "^3.0.4",
		"@vitest/coverage-v8": "^4.0.16",
		"concurrently": "^9.2.1",
		"execa": "^9.6.1",
		"np": "^10.2.0",
		"rimraf": "^6.1.2",
		"strip-ansi": "^7.1.2",
		"tsdown": "^0.18.3",
		"tslib": "^2.8.1",
		"tsm": "^2.3.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16",
		"which": "^6.0.0"
	},
	"packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}
